{
  "extends": "problems",

  "env": {
    "node": true,
    "mocha": true,
		"es6": true
  },

	"parserOptions": {
		"ecmaVersion": 2018
	},
	
	"globals": {
		"BigInt": true
	},

	"rules": {
		"no-console": "off",
		"no-unused-vars": ["warn", {
			"args": "none" 
		}],
		"no-use-before-define": "off",
		"prefer-template": "off",
		"dot-notation": "off",
		"prefer-rest-params": "off",
		"no-ex-assign": "off",
		"prefer-spread": "off",
		"valid-typeof": "off" 
	}
}
